  {{!
    @template tool_gnotify/notifications

    Moodle notifications template.

    Example context (json):
    {
        "notifications": [
            {
                "id": "12345",
                "ntype": "alert-success",
                "html": "<p>Your changes have been saved.</p>",
                "dismissable": true,
                "padding": true
            },
            {
                "id": "67890",
                "html": "<p>There was an error processing your request.</p>",
                "dismissable": false,
                "padding": false
            }
        ]

    }
  }}
<section id="gnotify-wrapper-non-sticky" class="row notification-relative gnotify-pt" aria-label="{{#str}}notification:label, tool_gnotify{{/str}}">
    {{#notifications}}
    <div id="{{id}}-gnotify-wrapper" class="gnotify">
        <div id="{{id}}-gnotify" class="{{#ntype}}alert {{ntype}}{{/ntype}}{{^ntype}}gnotify-alert-none{{/ntype}}{{^padding}} gnotify-pnone{{/padding}}">
            <div class="gnotify-notification-html{{^ntype}} card-body{{/ntype}} alert-dismissible" role="status" aria-live="polite">
                {{{html}}}
                {{#dismissable}}
                <button type="button" class="btn-close" onclick="require(['tool_gnotify/notification'], (amd)=>{amd.acknowledge({{id}})});">
                    <span class="visually-hidden">{{#str}}notification:dismiss, tool_gnotify{{/str}}</span>
                </button>
                {{/dismissable}}
            </div>
        </div>
    </div>
    {{/notifications}}
</section>